{
  "tools": [
    {
      "name": "horusec",
      "version": "latest",
      "description": "Horusec is a tool that performs static code analysis to identify security vulnerabilities in source code. It supports multiple programming languages and provides detailed reports on potential security issues.",
      "documentationUrl": "https://horusec.io/docs/",
      "defaultArgs": ["start", "-p", "${Build.SourcesDirectory}", "-o", "json", "--json-output-file", "${Agent.TempDirectory}/horusec.json", "--disable-docker", "--config-file-path", "${Agent.HomeDirectory}/Tools/horusec-config.json"],
      "platforms": [
        {
          "os": "windows",
          "arch": "x64",
          "url": "https://github.com/ZupIT/horusec/releases/download/v2.10.2/horusec_win_x64.zip",
          "latestUrl": "https://github.com/ZupIT/horusec/releases/latest/download/horusec_win_x64.zip",
          "archiveType": "zip",
          "executablePath": "horusec.exe"
        },
        {
          "os": "linux",
          "arch": "x64",
          "releaseApiUrl": "https://api.github.com/repos/ZupIT/horusec/releases/latest",
          "assetNameContains": ["linux", "amd64"],
          "archiveType": "raw"
        }
      ]
    },
    {
      "name": "trufflehog",
      "version": "3.73.0",
      "description": "TruffleHog is a tool that searches through git repositories for high-entropy strings and secrets, such as API keys, passwords, and other sensitive information. It can be used to identify potential security risks in codebases.",
      "documentationUrl": "https://github.com/trufflesecurity/trufflehog#readme",
      "defaultArgs": ["filesystem", "${Build.SourcesDirectory}", "--json"],
      "platforms": [
        {
          "os": "windows",
          "arch": "x64",
          "url": "https://github.com/trufflesecurity/trufflehog/releases/download/v3.73.0/trufflehog_3.73.0_windows_amd64.zip",
          "latestUrl": "https://github.com/trufflesecurity/trufflehog/releases/latest/download/trufflehog_windows_amd64.zip",
          "archiveType": "zip",
          "executablePath": "trufflehog.exe",
          "stdErrContains": [ "trufflehog" ]
        },
        {
          "os": "linux",
          "arch": "x64",
          "url": "https://github.com/trufflesecurity/trufflehog/releases/download/v3.73.0/trufflehog_3.73.0_linux_amd64.tar.gz",
          "latestUrl": "https://github.com/trufflesecurity/trufflehog/releases/latest/download/trufflehog_linux_amd64.tar.gz",
          "archiveType": "tar.gz",
          "executablePath": "trufflehog",
          "stdErrContains": [ "trufflehog" ]
        }
      ]
    },
    {
      "name": "semgrep",
      "version": "1.82.0",
      "pythonModule": "semgrep",
      "description": "Semgrep is a static analysis tool that finds bugs and enforces code standards.",
      "documentationUrl": "https://semgrep.dev/docs/",
      "defaultArgs": ["--config=auto", "${Build.SourcesDirectory}", "--json"]
    },
    {
      "name": "dependency-check",
      "version": "12.2.0",
      "description": "Dependency-Check is a tool that identifies project dependencies and checks if there are any known, publicly disclosed, vulnerabilities.",
      "documentationUrl": "https://jeremylong.github.io/DependencyCheck/dependency-check-cli/index.html",
      "defaultArgs": ["--scan", "${Build.SourcesDirectory}", "--format", "JSON", "--data", "${Agent.CacheDirectory}/dependency-check"],
      "platforms": [
        {
          "os": "windows",
          "arch": "x64",
          "url": "https://github.com/dependency-check/DependencyCheck/releases/download/v12.2.0/dependency-check-12.2.0-release.zip",
          "latestUrl": "https://github.com/dependency-check/DependencyCheck/releases/latest/download/dependency-check-release.zip",
          "archiveType": "zip",
          "executablePath": "dependency-check/bin/dependency-check.bat"
        },
        {
          "os": "linux",
          "arch": "x64",
          "url": "https://github.com/dependency-check/DependencyCheck/releases/download/v12.2.0/dependency-check-12.2.0-release.zip",
          "latestUrl": "https://github.com/dependency-check/DependencyCheck/releases/latest/download/dependency-check-release.zip",
          "archiveType": "zip",
          "executablePath": "dependency-check/bin/dependency-check.sh"
        }
      ]
    },
    {
      "name": "gitleaks",
      "version": "8.18.2",
      "description": "Gitleaks is a tool for detecting hardcoded secrets in git repositories. It scans commit history and identifies potential security risks by looking for patterns that match common types of secrets, such as API keys, passwords, and tokens.",
      "documentationUrl": "https://github.com/gitleaks/gitleaks#readme",
      "defaultArgs": ["detect", "--source", "${Build.SourcesDirectory}", "--report-format", "json"],
      "platforms": [
        {
          "os": "windows",
          "arch": "x64",
          "url": "https://github.com/gitleaks/gitleaks/releases/download/v8.18.2/gitleaks_8.18.2_windows_x64.zip",
          "latestUrl": "https://github.com/gitleaks/gitleaks/releases/latest/download/gitleaks_windows_x64.zip",
          "archiveType": "zip",
          "executablePath": "gitleaks.exe"
        },
        {
          "os": "linux",
          "arch": "x64",
          "url": "https://github.com/gitleaks/gitleaks/releases/download/v8.18.2/gitleaks_8.18.2_linux_x64.tar.gz",
          "latestUrl": "https://github.com/gitleaks/gitleaks/releases/latest/download/gitleaks_linux_x64.tar.gz",
          "archiveType": "tar.gz",
          "executablePath": "gitleaks"
        }
      ]
    },
    {
      "name": "grype",
      "version": "0.79.1",
      "description": "Grype is a vulnerability scanner for container images and filesystems. It identifies known vulnerabilities in your dependencies and provides detailed reports.",
      "documentationUrl": "https://github.com/anchore/grype#readme",
      "defaultArgs": ["dir:${Build.SourcesDirectory}", "--output", "json"],
      "platforms": [
        {
          "os": "windows",
          "arch": "x64",
          "url": "https://github.com/anchore/grype/releases/download/v0.79.1/grype_0.79.1_windows_amd64.zip",
          "latestUrl": "https://github.com/anchore/grype/releases/latest/download/grype_windows_amd64.zip",
          "archiveType": "zip",
          "executablePath": "grype.exe"
        },
        {
          "os": "linux",
          "arch": "x64",
          "url": "https://github.com/anchore/grype/releases/download/v0.79.1/grype_0.79.1_linux_amd64.tar.gz",
          "latestUrl": "https://github.com/anchore/grype/releases/latest/download/grype_linux_amd64.tar.gz",
          "archiveType": "tar.gz",
          "executablePath": "grype"
        }
      ]
    },
    {
      "name": "syft",
      "version": "latest",
      "description": "Syft generates a Software Bill of Materials (SBOM) for container images and filesystems.",
      "documentationUrl": "https://github.com/anchore/syft",
      "defaultArgs": ["dir:${Build.SourcesDirectory}", "--output", "json"],
      "platforms": [
        {
          "os": "windows",
          "arch": "x64",
          "releaseApiUrl": "https://api.github.com/repos/anchore/syft/releases/latest",
          "assetNameContains": ["windows", "amd64", "zip"],
          "latestUrl": "https://github.com/anchore/syft/releases/latest/download/syft_windows_amd64.zip",
          "archiveType": "zip",
          "executablePath": "syft.exe"
        },
        {
          "os": "linux",
          "arch": "x64",
          "releaseApiUrl": "https://api.github.com/repos/anchore/syft/releases/latest",
          "assetNameContains": ["linux", "amd64", "tar.gz"],
          "latestUrl": "https://github.com/anchore/syft/releases/latest/download/syft_linux_amd64.tar.gz",
          "archiveType": "tar.gz",
          "executablePath": "syft"
        }
      ]
    },
    {
      "name": "dotnet-vulnerable",
      "version": "",
      "description": "dotnet list package --vulnerable is a command that lists all the NuGet packages in a .NET project that have known vulnerabilities. It helps developers identify and address security issues in their dependencies.",
      "documentationUrl": "https://learn.microsoft.com/en-us/dotnet/core/tools/dotnet-list-package",
      "command": "dotnet",
      "defaultArgs": ["list", "package", "--vulnerable"]
    },
    {
      "name": "lizard",
      "version": "1.17.10",
      "description": "Lizard is a code analysis tool that calculates cyclomatic complexity and other metrics for various programming languages. It helps developers identify complex code that may be difficult to maintain or understand.",      
      "documentationUrl": "https://github.com/terryyin/lizard",
      "pythonModule": "lizard",
      "defaultArgs": ["${Build.SourcesDirectory}"]
    }
  ]
}
